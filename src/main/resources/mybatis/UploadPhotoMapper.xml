    <!-- *********************************公共嵌入块********************************* -->
    <!-- 所有输出列 -->
    <sql id="publicOutCol">
		picture.date AS date,
		picture.filePath AS filePath,
		picture.picId AS picId,
		picture.id AS id,
		picture.oldFilename AS oldFilename,
		picture.voltage AS voltage,
		picture.temp AS temp,
		picture.humi AS humi
	</sql>

    <!-- 所有输入列 -->
    <sql id="publicInCol">
		#{date},#{filePath},#{picId},#{oldFilename},#{voltage},#{temp},#{humi}
	</sql>

    <sql id="publicInsertCol">
        date,filePath,picId,oldFilename,voltage,temp,humi
	</sql>

    <!-- 所有设值列 -->
    <sql id="publicSet">
      date = #{date,jdbcType=VARCHAR},
      filePath = #{filePath,jdbcType=VARCHAR},
      picId = #{picId,jdbcType=VARCHAR},
      oldFilename = #{oldFilename,jdbcType=VARCHAR},
      voltage = #{voltage,jdbcType=VARCHAR},
      temp = #{temp,jdbcType=VARCHAR},
      humi = #{humi,jdbcType=VARCHAR}
	</sql>

    <!-- 主键条件 -->
    <sql id="publicWhereKey">
		WHERE id = #{id}
	</sql>

    <!-- 所有条件 -->
    <sql id="publicWhere">
        WHERE 1=1
        <if test="date != null">
          AND date = #{date}
        </if>
        <if test="filePath != null">
          AND filePath = #{filePath}
        </if>
        <if test="picId != null">
          AND picId = #{picId}
        </if>
        <if test="oldFilename != null">
          AND oldFilename = #{oldFilename}
        </if>
        <if test="voltage != null">
          AND voltage = #{voltage}
        </if>
        <if test="temp != null">
          AND temp = #{temp}
        </if>
        <if test="humi != null">
          AND humi = #{humi}
        </if>
    </sql>


    <!-- *********************************添加********************************* -->
    <!-- 新增 -->
    <insert id="addPhoto" parameterType="com.jt.bean.Picture">
        INSERT INTO jt.picture (<include refid="publicInsertCol"/>)
